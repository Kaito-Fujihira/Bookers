<main>
  <h1>Editing Book</h1>
  
  <% if @book.errors.any? %>
    <div class="alert-warning">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model:@book, local: true do |f| %>
    <div class="edit-btn">
      <div>Title</div>
      <div class="field"><%= f.text_field :title %></div>
      <div>Body</div>
      <div class="field"><%= f.text_area :body %></div>
      <div class="action"><%= f.submit "Update Book" %></div>
        <%= link_to "Show", book_path(@book.id) %>
          <span> | </span>
        <%= link_to "Back", books_path %>
    </div>
  <% end %>
</main>